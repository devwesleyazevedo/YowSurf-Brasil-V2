{{ content_for_layout }}
<!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>YOW SURF - BRASIL</title>
  </head>
  <body>
  
  
      <style>
          @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;900&display=swap');
          body {
              padding: 0;
              margin: 0;
              font-family: 'Poppins', sans-serif;
          }
          #shopify-section-password-header, #shopify-section-password-content {
            display: none !important;
          }
          img {
              width: 100%;
          }
          .section_corpo {
              max-width: 1920px;
              margin: 0 auto;
              display: flex;
              flex-direction: column;
          }
          .section01 {
              width: 100%;
              height: 1405px;
              background-image: url('https://cdn.shopify.com/s/files/1/0789/1304/4790/files/bg_1.jpg?v=1691599120');
              background-position: top center;
              background-repeat: no-repeat;
              position: relative;
  
          }
          .section01:after {
              content: "";
              position: absolute;
              width: 578px;
              height: 657px;
              right: 0;
              bottom: -220px;
              z-index: 222;
              background-image: url('https://cdn.shopify.com/s/files/1/0789/1304/4790/files/seloamarelo.png?v=1691599119');
          }
          .section02 {
              width: 100%;
              height: 1335px;
              background-image: url('https://cdn.shopify.com/s/files/1/0789/1304/4790/files/bg_2.jpg?v=1691599120');
              background-position: top center;
              background-repeat: no-repeat;
              position: relative;
          }
  
  
          .section02 .form {
              max-width: 70%;
              margin: 0 auto;
          }
          .section02 .form .formshopify {
              width: 100%;
              height: 400px;
              margin-top: 80px;
          }
  
  
  
  
  
          .section02 .form .formshopify form {
      width: 100%;
      margin: 0 auto;
    }
  
    .section02 .bannerfique {
      max-width: 60%;
    }
  
  
          .section02 .form .formshopify form label {
      font-weight: 700;
      font-size: 2em;
      display: block;
      width: 25%;
      text-transform: uppercase;
    }
  
    .section02 .form .formshopify form .first-name,
    .section02 .form .formshopify form .email {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
      margin: 15px 0;
    }
  
    .section02 .form .formshopify form input {
      display: block;
      width: 100%;
      padding: 6px 12px;
      font-size: 14px;
      line-height: 1.42857143;
      color: #ffd900;
      background-color: #000;
      background-image: none;
      border: none;
      border-radius: 4px;
      height: 50px;
    }
  
    .section02 .form .formshopify form .submit input {
      border: none;
      color: #000;
      display: inline-block;
      background: #e8c500;
      text-transform: uppercase;
      padding: 13px 30px;
      margin-top: 20px;
      transition: all 0.3s;
      height: auto;
      font-size: 1rem;
      font-weight: 600;
    }
  
  
    .section02 .corposiga {
      padding-left: 40%;
      margin-top: 80px;
      display: flex;
      flex-direction: column;
      align-items: end;
      justify-content: center;
  }
  
  
  .section02 .corposiga .siga {
     
  }
  
  .section02 .corposiga .social {
      display: flex;
      align-items: start;
      justify-content: center;
      flex-direction: column;
      max-width: 50%;
      gap: 30px;
  }
  
  .section02 .corposiga .social .wha {
      max-width: 300px;
  }
  
  .section02 .corposiga .social .inst{
      max-width: 360px;
  }
  
          .section03 {
              width: 100%;
              height: 4084px;
              background-image: url('https://cdn.shopify.com/s/files/1/0789/1304/4790/files/bg_3.jpg?v=1691599121');
              background-position: top center;
              background-repeat: no-repeat;
              position: relative;
          }
  
  
  
  
  
  
  
  
   @media (max-width: 1300px) {
  
  .section01:after {
      width: 280px;
      height: 320px;
      background-size: cover;
      background-repeat: no-repeat;
  }
  
  .section01 {
      background-position: top left;
      background-size: contain;
      height: 934px;
   }
   .section02 {
      background-position: top left;
      background-size: contain;
      height: 890px;
      margin-bottom: -1px;
   }
   .section03 {
      background-position: top left;
      background-size: contain;
      height: 2723px;
   }
   .section02 .corposiga {
      margin-top: 40px;
  }
  .section02 .form .formshopify {
      margin-top: 23px;
  }
  
  }
  
  
  
  
  @media (max-width: 768px) {
  
  .section01 {
      height: 562px;
   }
   .section02 {
      height: 535px;
   }
   .section03 {
      height: 1634px;
   }
   .section02 .form .formshopify {
      margin-top: 0;
  }
  .section02 .form {
      max-width: 80%;
      margin-top: -42px;
  }
  .section02 .form .formshopify form label {
      font-size: 1.5em;
  }
  .section02 .form .formshopify form input {
      height: 40px;
  }
  .section01:after {
      bottom: -69px;
      width: 200px;
      height: 233px;
  }
  .section02 .corposiga {
      padding-left: 50%;
  }
  .section02 .form .formshopify form .first-name, .section02 .form .formshopify form .email {
      margin: 10px;
      gap: 10px;
  }
  .section02 .form .formshopify form .submit input {
      margin: 0;
  }
  .section02 .corposiga .social {
      flex-direction: row;
      max-width: fit-content;
      margin-top: 20px;
  }
  .section02 .corposiga .social .wha {
      max-width: fit-content;
  }
  .section02 .corposiga .social .inst {
      max-width: fit-content;
  }
  
  }
  
  
  
  
  
  
  
  
  @media (max-width: 700px) {
  
  
      .section01 {
          height: 285px;
   }
   .section02 {
      height: 272px;
   }
   .section03 {
      height: 830px;
   }
  
  
   .section01:after {
      bottom: -18px;
      width: 100px;
      height: 116px;
  }
  
  .section02 .form .formshopify form label {
      font-size: 1em;
  }
  
  .section02 .form {
      max-width: 95%;
  
  }
  .section02 .form .formshopify form input {
      height: 20px;
  }
  
  .section02 .form .formshopify form .submit input {
      margin: 0;
      max-width: 89px;
      float: left;
      padding: 5px 13px;
      font-size: 13px;
      margin-left: 23%;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 25px;
  }
  
  .section02 .bannerfique {
      max-width: 40%;
  }
  .section02 .corposiga .siga {
      max-width: 150px;
  }
  
  .section02 .corposiga .social {
      gap: 10px;
  }
  .section02 .corposiga .social .wha {
      max-width: 100px;
  }
  .section02 .corposiga .social .inst {
      max-width: 100px;
  }
  
   }
  
  
  
  
  
  
  
  
  
  
  
  
  
  
      </style>
      
      <div class="section_corpo">
          <div class="section01"></div>
  
  
  
  
          <div class="section02">
              <div class="form">
                  <div class="formshopify">
                      <img class="bannerfique" src="https://cdn.shopify.com/s/files/1/0789/1304/4790/files/Layer_20.png?v=1690911428">
                      {% form 'contact' %}
                      {{ form.errors | default_errors }}
              
                      <div class="first-name">
                        <label for="first-name">Nome</label>
                        <input type="text" name="contact[first_name]" id="first-name" placeholder="Nome">
                      </div>
              
                      <div class="email">
                        <label for="email">E-mail</label>
                        <input type="email" name="contact[email]" id="email" placeholder="E-mail">
                      </div>
              
                      <div class="message" style="visibility: hidden;position: absolute;z-index: -1;">
                        <label for="message">Mensagem</label>
                        <textarea name="contact[body]" id="message"></textarea>
                      </div>
              
                      <div class="submit">
                        <input type="submit" value="Enviar">
                      </div>
                    {% endform %}
                        <div class="corposiga">
                              <div class="siga"><img src="https://cdn.shopify.com/s/files/1/0789/1304/4790/files/social2.png?v=1691016528"></div>
                              <div class="social">
                                  <div class="wha"><img src="https://cdn.shopify.com/s/files/1/0789/1304/4790/files/WHATSAPP.png?v=1690911327"></div>
                                  <a  target="_blank" href="https://instagram.com/yowsurf_brasil?igshid=MzRlODBiNWFlZA==">
                                  <div class="inst"><img src="https://cdn.shopify.com/s/files/1/0789/1304/4790/files/instagram.png?v=1690911327"></div>
                                  </a>
                              </div>
                        </div>
                  </div>
              </div>
          </div>
  
  
  
  
  
  
  
          <div class="section03"></div>
      </div>
  
  
  
  
  
  
  
  </body>
  </html>
  